<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:Cardview="http://schemas.android.com/apk/res-auto"
    Cardview:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:id="@+id/cardview">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cantProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/cliente"
            android:theme="@style/titulos"
            Cardview:layout_constraintBottom_toBottomOf="parent"
            Cardview:layout_constraintStart_toStartOf="parent"
            Cardview:layout_constraintTop_toTopOf="parent"
            Cardview:layout_constraintVertical_bias="0.173" />

        <TextView
            android:id="@+id/totalVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/cliente"
            android:theme="@style/titulos"
            Cardview:layout_constraintStart_toStartOf="parent"
            Cardview:layout_constraintTop_toBottomOf="@+id/cantProducto" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:text="@string/cliente"
            android:theme="@style/titulos"
            Cardview:layout_constraintBottom_toBottomOf="parent"
            Cardview:layout_constraintEnd_toEndOf="parent"
            Cardview:layout_constraintTop_toTopOf="parent"
            Cardview:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/nomCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:layout_marginTop="6dp"
            android:text="@string/cliente"
            android:theme="@style/titulos"
            Cardview:layout_constraintEnd_toEndOf="parent"
            Cardview:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>